<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet package metadata -->
    <PackageId>PersistenceToolkit.Abstractions</PackageId>
    <Version>10.0.0</Version>
    <Authors>MohsinBhatti</Authors>
    <Company>MBDevForce</Company>
    <Description>Abstractions and interfaces for PersistenceToolkit.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/MohsinBhatti1/PersistenceToolkit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MohsinBhatti1/PersistenceToolkit</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Copyright © MBDevForce 2025</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <PackageTags>efcore;repository;specification;ddd;architecture;infrastructure</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PersistenceToolkit.Persistence" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PersistenceToolkit.Domain\PersistenceToolkit.Domain.csproj" />
  </ItemGroup>
</Project>
